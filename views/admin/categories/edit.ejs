<%- include('../../partials/navbar.ejs'); %>
<div class="container">
	<hr>
	<div class="card">
		<div class="card-header">
			<h3>Edit Category</h3>
		</div>
		<div class="card-body">
			<form method="POST" action="/categories/update">
				<input class="form-control" type="text" name="title" placeholder="Define the category title" value="<%= category.title%>">
				<input type="hidden" name="id" value="<%= category.id %>">
				<br>
				<button class="btn btn-success">Update</button>
			</form>
		</div>
	</div>
</div>
