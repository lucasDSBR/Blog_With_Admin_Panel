<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/navbar.ejs'); %>
<div class="container">
	<hr>
	<div class="card">
		<div class="card-header">
			<h3>Register Article</h3>
		</div>
		<div class="card-body">
			<form method="POST" action="/articles/save">
				<input class="form-control" type="text" name="title" placeholder="Define the article title">
				<br>
				<textarea class="form-control" placeholder="Write the article here..." name="body" id="article"></textarea>
				<br>
				<label>Category:</label>
				<select name="category" class="form-control">
					<% categories.forEach((category) => { %>
						<option value="<%= category.id %>"><%= category.title %></option>
					<%});%>
				</select>
				<br>
				<button class="btn btn-success">Register</button>
			</form>
		</div>
	</div>
</div>
<%- include('../../partials/footer.ejs'); %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
	tinymce.init({
		selector: "#article",
		plugins: [
			'advlist',
			'autolink',
			'link',
			'image',
			'lists',
			'print',
			'preview',
			'hr',
			'searchreplace',
			'wordcount',
			'fullscreen',
			'insertdatetime',
			'media',
			'save',
			'table',
			'paste',
			'emoticons'
		]
	})
</script>