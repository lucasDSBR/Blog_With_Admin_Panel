<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/homenavbar.ejs'); %>
<body>
	<div class="container">
		<hr>
		<% result.articles.rows.forEach((article) => { %>
			<div class="card">
				<div class="card-header">
					<h2><%= article.title%></h2>
				</div>
				<div class="card-header">
					<a class="btn btn-success" href="/<%= article.slug%>">Read Article</a>
				</div>
			</div>
			<br>
		<% }); %>
		<div class="row">
			<div class="col col-12">
				<% if(result.next) {%>
					<a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Next >></a>
				<% } %>
				<% if(result.page > 2) { %>
					<a style="float: left;" href="/articles/page/<%= result.page - 1 %>"><< Back</a>
				<% } else if(result.page == 2) { %>
					<a style="float: left;" href="/">Home</a>
				<% } %>
			</div>
		</div>
		<hr>
	</div>
</body>
<%- include('../../partials/footer.ejs'); %>